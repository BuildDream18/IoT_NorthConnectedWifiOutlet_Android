<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="100dp">

    <ImageView
        android:id="@+id/imgIcon"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_margin="15dp"
        android:padding="10dp"
        app:srcCompat="@drawable/_001" />

    <TextView
        android:id="@+id/txtOnTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="25dp"
        android:layout_toEndOf="@+id/imgIcon"
        android:layout_toRightOf="@+id/imgIcon"
        android:text="TextView"
        android:textColor="#6c6c6c"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/imgStatus"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="20dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/power"
        android:tint="@color/primary_dark" />

    <at.blogc.android.views.ExpandableTextView
        android:id="@+id/txtOffTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtOnTime"
        android:layout_toEndOf="@+id/imgIcon"
        android:layout_toRightOf="@+id/imgIcon"
        android:ellipsize="end"
        android:maxLines="2"
        android:minWidth="100dp"
        android:text="TextView"
        android:textColor="#DD6c6c6c"
        android:textSize="15sp"
        app:animation_duration="1000" />

    <TextView
        android:id="@+id/txtSwitchStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imgIcon"
        android:layout_alignLeft="@+id/imgStatus"
        android:layout_alignStart="@+id/imgStatus"
        android:text=" On "
        android:textColor="#DD6c6c6c"
        android:textSize="20sp" />

</RelativeLayout>