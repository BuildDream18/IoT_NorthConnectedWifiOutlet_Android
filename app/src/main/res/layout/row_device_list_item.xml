<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imgIcon"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_margin="15dp"
        android:padding="10dp"
        app:srcCompat="@drawable/_001"/>

    <TextView
        android:id="@+id/txtOnTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="25dp"
        android:layout_toEndOf="@+id/imgIcon"
        android:layout_toRightOf="@+id/imgIcon"
        android:text="TextView"
        android:textColor="#6c6c6c"
        android:textSize="20sp"/>

    <RelativeLayout
        android:layout_width="40dp"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:id="@+id/tv_edit_device"
        android:background="?attr/selectableItemBackgroundBorderless">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit"
        android:layout_centerInParent="true"
        android:textColor="@color/colorPrimary"
        android:textSize="16sp"
    />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/tv_edit_device"
        android:layout_marginRight="20dp"
        android:paddingBottom="10dp"
        android:id="@+id/rl_current_device_status"
        android:background="?attr/selectableItemBackgroundBorderless"
        >

    <ImageView
        android:id="@+id/imgStatus"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        tools:src="@drawable/ic_off"
    />
        <TextView
            android:id="@+id/txtSwitchStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imgStatus"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:textColor="#DD6c6c6c"
            android:textSize="20sp"
            tools:text="ON"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/txtOffTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtOnTime"
        android:layout_marginTop="3dp"
        android:layout_toEndOf="@+id/imgIcon"
        android:layout_toRightOf="@+id/imgIcon"
        android:textColor="#DD6c6c6c"
        android:textSize="15sp"/>

    <TextView
        android:id="@+id/tv_first_device"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtOnTime"
        android:layout_marginTop="3dp"
        android:layout_toEndOf="@+id/imgIcon"
        android:layout_toRightOf="@+id/imgIcon"
        android:textColor="#DD6c6c6c"
        android:textSize="15sp"/>

    <TextView
        android:id="@+id/tv_second_device"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_first_device"
        android:layout_toEndOf="@+id/imgIcon"
        android:layout_toRightOf="@+id/imgIcon"
        android:textColor="#DD6c6c6c"
        android:textSize="15sp"/>


</RelativeLayout>